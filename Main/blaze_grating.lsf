# image the index profile
image(getdata("index","x")*1e6,
      getdata("index","y")*1e6,
      getdata("index","index_z"),
      "x (um)", "y (um)","Index profile");

#monitors;
select("grating_T");
set("make plots",0);
runanalysis;

m="grating_T";
theta=getdata(m,"theta");
T_grating=getdata(m,"T_grating");
T=getdata(m,"T");


plot(theta,T_grating,
    "angle (degrees)",
    "fraction of reflected power",
    "order strength",
    "plot points");

?"Total reflection: " +num2str(T);
?"Reflection to each order: [theta(i), T(i)]";
?num2str([theta, T_grating]);